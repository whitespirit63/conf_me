<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    tools:context="com.hfad.conf_me.ProfileFragment">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="MissingConstraints"
        android:id="@+id/toolbar"
        android:paddingRight="16dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_select_all_24"
            android:id="@+id/btn_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nickname"
            android:text="\@nickname"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignLeft="@id/btn_left"
            android:layout_alignRight="@+id/btn_right"
            android:gravity="center"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_dehaze_24"
                android:id="@+id/btn_right"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>





<ScrollView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/toolbar"
    >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3000dp"
            android:orientation="vertical"
        android:paddingBottom="70dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/user_foto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>



            <LinearLayout
                android:id="@+id/edit_profile"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                android:weightSum="16"
                tools:ignore="MissingConstraints"
                android:layout_marginBottom="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="14"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/purple"
                        android:textSize="24dp" />



                </LinearLayout>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                    android:layout_gravity="center_vertical"></ImageView>


            </LinearLayout>
        <LinearLayout
            android:id="@+id/user_data2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="16"
            android:gravity="left"
            app:layout_constraintTop_toBottomOf="@id/edit_profile"
            android:layout_alignParentTop="true"

            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:orientation="horizontal"
                android:id="@+id/user_email"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_email_24"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/darkgrey"
                    android:layout_weight="9"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_margin="8dp">
                <Button
                    android:id="@+id/tag1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text=""
                    android:background="@drawable/btn_purple_border"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:layout_margin="8dp"/>
                <Button
                    android:id="@+id/tag2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:background="@drawable/btn_purple_border"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:layout_margin="8dp"/>
                <Button
                    android:id="@+id/tag3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:background="@drawable/btn_purple_border"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:layout_margin="8dp"/>


            </LinearLayout>
        </LinearLayout>



            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/user_data2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"

                android:layout_marginTop="0dp"

                android:layout_alignParentBottom="true"
                tools:ignore="MissingConstraints">


            </LinearLayout>

    </LinearLayout>
</ScrollView>

</RelativeLayout>


